---
import FAQAccordion from './FAQAccordion.tsx';
---

<section class="py-16 md:py-24 px-4 bg-[#0a0a1a] relative overflow-hidden">
  <div class="absolute inset-0">
    <div class="absolute bottom-0 left-1/4 w-64 md:w-96 h-64 md:h-96 bg-cyan-500/5 rounded-full blur-[100px] md:blur-[150px]"></div>
  </div>
  
  <div class="max-w-3xl mx-auto relative z-10">
    <div class="text-center mb-8 md:mb-12 reveal">
      <span class="inline-block px-3 md:px-4 py-1.5 md:py-2 rounded-full bg-cyan-500/20 text-cyan-400 text-xs md:text-sm font-medium mb-3 md:mb-4">FAQ</span>
      <h2 class="text-2xl sm:text-3xl md:text-5xl font-bold text-white">Частые вопросы</h2>
    </div>
    <div class="reveal-scale">
      <FAQAccordion client:load />
    </div>
  </div>
</section>
